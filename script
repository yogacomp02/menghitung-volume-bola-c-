#include <iostream>

using namespace std;

/* run this program using the console pauser or add your own getch, system("pause") or input loop */


int main(int argc, char** argv) {

            float phi=3.14;

            float r, vol, luas;

            cout<<"Masukan jari-jari: ";

 cin>>r;

            luas=((4*phi)*r*r);

            vol=(1.3*phi*r*r*r);

            cout<<"Luas Permukaan Bola : "<<luas<<endl;

            cout<<"Volume Bola : "<<vol<<endl;

            return 0;

}
